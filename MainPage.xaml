<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Silberstadt.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="freiberg.png"
                HorizontalOptions="Fill"
                Aspect="AspectFill"/>
            <Button
                x:Name="HistoryBnt"
                Text="Geschichte" 
                SemanticProperties.Hint="History"
                Clicked="OnHistoryClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="FamousPeopleBtn"
                Text="Berühmte Persönlichkeiten" 
                SemanticProperties.Hint="Famous people"
                Clicked="OnFamousPeopleClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="WebSideBtn"
                Text="Webseite von Freiberg" 
                SemanticProperties.Hint="Web side"
                Clicked="OnWebsideClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
